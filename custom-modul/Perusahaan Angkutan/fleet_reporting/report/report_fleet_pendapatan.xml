                                    </td>
                                    <td style="text-align:right;">
                                        <t t-esc="'{:,}'.format(int(setoran['total_jumlah']))"/>
<!--                                        <t t-set="pengeluaran_sparepart" t-value="pengeluaran_sparepart + float(setoran['total_amount'])"/>-->
