<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_kasbon_karyawan" model="ir.actions.act_window">
        <field name="name">Kasbon Karyawan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kasbon.karyawan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <record id="kasbon_karyawan_tree_view" model="ir.ui.view">
        <field name="name">kasbon.karyawan.tree</field>
        <field name="model">kasbon.karyawan</field>
        <field name="arch" type="xml">
            <tree >
                <field name="nama_karyawan" string="Nama Karyawan" optional="show"/>
<!--                <field name="state" string="State" optional="show" widget="badge" decoration-info="state=='to_request'" decoration-warning="state=='requested'" decoration-muted="state=='cancel'" decoration-success="state in ['confirmed']"/>-->
            </tree>
        </field>
    </record>

    <record id="kasbon_karyawan_form_view" model="ir.ui.view">
        <field name="name">kasbon.karyawan.form</field>
        <field name="model">kasbon.karyawan</field>
        <field name="arch" type="xml">
            <form delete="1">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft, paid"/>
                        <button name="proses" type="object" string="Proses" class="btn-primary" />
<!--                        <button name="validate" type="object" string="Validate" class="btn-primary" attrs="{'invisible': [('state', 'in', ('to_request', 'cancel', 'confirmed'))]}"/>-->
<!--                        <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ('cancel'))]}"/>-->
<!--                        <button name="set_to_draft" type="object" string="Set to Draft" attrs="{'invisible': [('state', 'in', ('to_request', 'requested', 'confirm', 'confirmed'))]}"/>-->
                    </header>

                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

<!--                    <div class="oe_title">-->
<!--                        <h1>-->
<!--                            <field name="oper_order_name"/>-->
<!--                        </h1>-->
<!--                    </div>-->

                    <group>
                        <group>
                            <field name="nama_karyawan" string="Nama Karyawan"/>
                            <field name="rekening_karyawan" string="Rekening"/>
                            <field name="sisa_piutang" string="Sisa Piutang"/>

                            <field name="tipe_kasbon" string="Tipe Kasbon" />
                            <field name="nominal_pinjam" string="Nominal Pinjam" attrs="{'invisible': [('tipe_kasbon', '=', 'bayar')]}"/>
                            <field name="nominal_bayar" string="Nominal Bayar" attrs="{'invisible': [('tipe_kasbon', '=', 'pinjam')]}"/>
                        </group>

                        <group>
                            <field name="akun_piutang" string="Akun Piutang"/>
                            <field name="akun_kas" string="Akun Kas"/>
                            <field name="keterangan" string="Keterangan"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="History PTU">
                            <field name="history_hutang">
                                <tree editable="bottom">
                                    <field name="kasbon_karyawan" invisible="1"/>
                                    <field name="kode_nomor_hutang" optional="show"/>
                                    <field name="tanggal_hutang" optional="show"/>
                                    <field name="nominal_pinjam" optional="show"/>
                                </tree>
                            </field>
                        </page>

                        <page string="History Bayar">
                            <field name="history_bayar">
                                <tree editable="bottom">
                                    <field name="kasbon_karyawan" invisible="1"/>
                                    <field name="kode_nomor_bayar" optional="show"/>
                                    <field name="tanggal_bayar" optional="show"/>
                                    <field name="nominal_bayar" optional="show"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>





</odoo>