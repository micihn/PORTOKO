<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_uang_jalan" model="ir.actions.act_window">
        <field name="name">Uang Jalan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">uang.jalan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

    <record id="uang_jalan_tree_view" model="ir.ui.view">
        <field name="name">uang.jalan.tree</field>
        <field name="model">uang.jalan</field>
        <field name="arch" type="xml">
            <tree default_order="uang_jalan_name desc">
                <field name="uang_jalan_name" string="No Uang Jalan" optional="show"/>
                <field name="create_date" string="Tanggal" optional="show"/>
                <field name="kendaraan" string="Kendaraan" optional="show"/>
                <field name="keterangan" string="Keterangan" optional="show"/>
                <field name="total" string="Nominal" optional="show"/>
                <field name="state" string="State" optional="show" widget="badge" decoration-info="state=='to_submit'" decoration-warning="state=='submitted'" decoration-muted="state=='cancel'" decoration-success="state in ['validated', 'paid']"/>
            </tree>
        </field>
    </record>

    <record id="uang_jalan_form_view" model="ir.ui.view">
        <field name="name">uang.jalan.form</field>
        <field name="model">uang.jalan</field>
        <field name="arch" type="xml">
            <form delete="1">

                <header>
                    <field name="state" widget="statusbar" statusbar_visible="to_submit, submitted, validated, paid"/>
                    <button name="submit" type="object" string="Submit" class="btn-primary" attrs="{'invisible': [('state', 'in', ('submitted', 'validated', 'paid', 'cancel'))]}"/>
                    <button name="hitung_ulang_nominal_uj" type="object" string="Hitung Ulang Uang Jalan" attrs="{'invisible': [('state', 'in', ('submitted', 'validated', 'paid', 'cancel'))]}"/>
                    <button name="validate" type="object" string="Validate" class="btn-primary" attrs="{'invisible': [('state', 'in', ('to_submit', 'validated', 'paid', 'cancel'))]}"/>
                    <button name="paid" type="object" string="Submit Payment" class="btn-primary" attrs="{'invisible': [('state', 'in', ('to_submit', 'submitted', 'paid', 'cancel'))]}"/>
                    <button name="set_to_draft" type="object" string="Set to Draft" attrs="{'invisible': [('state', 'in', ('to_submit', 'submitted', 'paid', ))]}"/>
                    <button name="cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ('cancel',))]}"/>
                </header>

                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="uang_jalan_name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="kendaraan" />
                            <field name="sopir" />
                            <field name="kenek" />
                        </group>

                        <group>
                            <field name="create_date" />
                            <field name="keterangan" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Detail Uang Jalan">
                            <field name="uang_jalan_line">
                                <tree editable="bottom">
                                    <field name="uang_jalan" invisible="1"/>
                                    <field name="order_pengiriman" string="No Order" width="20%" optional="show" options="{'no_create': True}"/>
                                    <field name="tipe" width="20%" optional="show"/>
                                    <field name="muat" width="20%" optional="show"/>
                                    <field name="bongkar" width="20%" optional="show"/>
                                    <field name="keterangan" width="20%" optional="show"/>
                                    <field name="nominal_uang_jalan" width="20%" force_save="1" readonly="1" optional="show"/>
                                </tree>
                            </field>

                            <div class="oe_left">
                                <!-- Total -->
                                <div class="oe_total_label" style="display: inline-block; margin-right: 50px; color:#000000">
                                    <label for="biaya_tambahan" string="Biaya Tambahan "/>
                                </div>
                                <div class="oe_total_field" style="display: inline-block;">
                                    <field name="biaya_tambahan" />
                                </div>
                            </div>

                            <div class="oe_right">
                                <!-- Total -->
                                <div class="oe_total_label" style="display: inline-block; margin-right: 50px; color:#000000">
                                    <label for="total" string="Total : "/>
                                </div>
                                <div class="oe_total_field" style="display: inline-block;">
                                    <field name="total" />
                                </div>
                            </div>

                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <!-- Followers view -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!-- Chatter view -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>





</odoo>