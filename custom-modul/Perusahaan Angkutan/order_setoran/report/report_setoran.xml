<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_setoran">
        <t t-call="web.html_container">
            <t t-esc="docs"/>
            <t t-foreach="docs" t-as="o">

                <style type="text/css">
                    .odoo-default-font {
                        font-family: Lato, sans-serif;
                    }
                </style>

                <div class="page odoo-default-font">
                    <b>
                        <t t-esc="o.company_id.name"/>
                    </b>
                    <br/>
                    <t t-esc="o.company_id.street"/>
                    <br/>
                    Tlp.
                    <t t-esc="o.company_id.phone"/>
                    <br/>

                    <h3 style="text-align: center; margin-bottom: 0;">
                        <span style="text-decoration: underline; font-weight: bold;">SETORAN</span>
                    </h3>

                    <div style="text-align: center; margin-top: 0;">
                        <b>No:
                            <t t-esc="o.kode_order_setoran"/>
                        </b>
                    </div>
                    <br/>

                    <span style="font-size: 14px">Tanggal</span>
                    <span style="margin-left:10px; font-size: 14px">:
                        <t t-esc="o.create_date.strftime('%d-%m-%Y')"/>
                    </span>

                    <br/>
                    <span style="font-size: 14px">No. Truk</span>
                    <span style="margin-left:4px; font-size: 14px">:
                        <t t-esc="o.kendaraan.license_plate"/>
                    </span>
                    <br/>

                    <div style="float: left; text-align: left; width: 48%; white-space: nowrap; font-size: 14px;">
                        Supir
                        <span style="margin-left: 26px;">:
                            <t t-esc="o.sopir.name"/>
                        </span>
                        <br/>
                        Kenek
                        <span style="margin-left: 20px;">:
                            <t t-esc="o.kenek.name"/>
                        </span>
                    </div>

                    <div style="float: right; text-align: right; width: 48%; white-space: nowrap; font-size: 14px;">
                        Komisi :
                        Rp<t t-esc="'{:,}'.format(int(o.komisi_sopir)).replace(',', '.')"/>
                    </div>

                    <div style="float: right; text-align: right; width: 48%; white-space: nowrap; font-size: 14px;">
                        Komisi :
                        Rp<t t-esc="'{:,}'.format(int(o.komisi_kenek)).replace(',', '.')"/>
                    </div>
                    <br/>
                    <br/>
                    ---------------------------------------------------------------------


                    <table style="width: 100%;">
                        <tbody>
                            <tr>
                                <td width="55%">Hasil Jasa</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_jumlah)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Bayar Dimuka</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_bayar_dimuka)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Ongkos</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_ongkos)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Uang Jalan</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_uang_jalan)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Pengeluaran</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_pengeluaran)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Biaya Fee</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_biaya_fee)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Biaya Pembelian</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_pembelian)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="3">
                                    ---------------------------------------------------------------------
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">Sisa</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.sisa)).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">% UJ</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    <t t-esc="'{:,}'.format((o.total_pengeluaran + o.komisi_sopir + o.komisi_kenek) * 100 / o.total_jumlah).replace(',', '.')"/>
                                </td>
                            </tr>

                            <tr>
                                <td width="55%">UANG SENDIRI (US)</td>
                                <td width="5%">:</td>
                                <td style="text-align:right">
                                    Rp<t t-esc="'{:,}'.format(int(o.total_pengeluaran - o.total_uang_jalan)).replace(',', '.')"/>
                                </td>
                            </tr>

                        </tbody>
                    </table>


                </div>
            </t>
        </t>
    </template>

</odoo>